  </screenshots>

  <releases>
    <release version="1.8.0" date="2024-01-20" >
      <description>
        <p>Flatpak no longer has direct access to xdg-data/2009scape, and will instead use paths given by the Flatpak runtime environment (i.e. ~/.var/app/org._2009scape.Launcher)</p>
      </description>
    </release>
    <release version="1.7.1" date="2024-01-05" >
      <description>
        <p>Small formatting improvements to Latest News feed</p>
      </description>
    </release>
    <release version="1.7.0" date="2023-11-06" >
      <description>
        <p>Added Singleplayer Server Hosting to launcher</p>
        <p>Bugfixes</p>
      </description>
    </release>
    <release version="1.6.0" date="2023-08-26" >
      <description>
        <p>Plugin Management Overhaul</p>
        <p>Bugfixes</p>
      </description>
    </release>
  </releases>

