<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>org._2009scape.Launcher</id>
  <launchable type="desktop-id">org._2009scape.Launcher.desktop</launchable>
  <name>2009scape</name>
  <developer_name>2009scape</developer_name>
  <summary>Launcher for Runescape 2009 Emulation Servers</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>AGPL-3.0-or-later</project_license>
  <url type="homepage">https://2009scape.org/</url>

  <description>
    <p>2009scape is a free, open-source launcher for Runescape 2009 Emulation servers</p>
    <p>Not affiliated with the Jagex Launcher or OSRS.</p>
  </description>

  <screenshots>
    <screenshot type="default">https://i.imgur.com/pmcGBRd.jpg</screenshot>
